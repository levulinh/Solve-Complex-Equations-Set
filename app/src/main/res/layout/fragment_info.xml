<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:text="Ứng dụng giải hệ phương trình\n số phức"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:padding="10dp"
            android:animationCache="false"
            android:background="@drawable/back">

            <TextView
                android:text="Hướng dẫn nhập liệu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textStyle="normal|bold" />

            <TextView
                android:text='Các hệ số được nhập vào dưới dạng số phức.\nBạn có thể nhập dạng a+bi, a+bj, a, bi, bj\nHoặc dạng số phức lượng giác rAphi.\n(Trong đó "A", hoặc "a" là phần phân cách giữa r và phi, phi tính bằng độ)'
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_marginTop="5dp" />

            <TextView
                android:text="Ví Dụ:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_marginTop="10dp"
                android:textStyle="normal|bold" />

            <TextView
                android:text="3+2i, 3+2j, 3+i\n2a60, -3A120"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <TextView
            android:text="Lê Vũ Linh - AP EEE K59\n(English Version coming soon)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textStyle="normal|bold" />
    </LinearLayout>
</FrameLayout>